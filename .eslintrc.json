{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["standard-jsx"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "no-param-reassign": "warn",
    "max-len": "off"
  }
}
